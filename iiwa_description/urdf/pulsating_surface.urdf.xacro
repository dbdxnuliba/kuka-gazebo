<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name = "pulsating_surface">

  <joint
    name="fixed_1"
    type="fixed">
    <parent
      link="world" />
    <child
      link="post" />
     <origin xyz="1.5 0.25 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="post">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="5"/>
        <inertia ixx="1"  ixy="0"  ixz="0" iyy="1" iyz="0" izz="1" />
      </inertial>
      
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
         <!-- <mesh filename="package://iiwa_description/meshes/iiwa14/collision/Pulsating Surface/Base.STL"/>-->
        </geometry>
        <material name="Grey"/>
      </visual>
      
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://iiwa_description/meshes/iiwa14/collision/Pulsating Surface/Base.STL"/>
        </geometry>
        <material name="Grey"/>
      </collision>
    </link>
    
    <!-- joint between post and surface -->
    <joint name="prismatic_joint" type="prismatic">
      <parent link="post"/>
      <child link="surface"/>
      <origin xyz="0 0 -0.3" rpy="0 0 1.5707"/>
      <axis xyz="0 0 1"/>
      <limit lower="-0.8" upper="0.3"
             effort="10000" velocity="10000" />
      <dynamics damping="1" friction = "1"/>
    </joint>

    <link name="surface">
      <inertial>
        <origin xyz="0 0 0.0015" rpy="0 0 0"/>
        <mass value="3.645"/>
        <inertia ixx="0.0276"  ixy="0"  ixz="0" iyy="0.00711" iyz="0" izz="0.03417" />
      </inertial>
      
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://iiwa_description/meshes/iiwa14/collision/Pulsating Surface/Surface.STL"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://iiwa_description/meshes/iiwa14/collision/Pulsating Surface/Surface.STL"/>
        </geometry>
        <material name="Grey"/>
      </collision>
    </link>
</xacro:macro>
    
</robot>


